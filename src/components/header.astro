---
import { Icon as AstroIcon } from "astro-icon/components";
import { SITE_LOGO, SITE_TITLE } from "../config";
import Menus from "./menus.astro";
import LanguageDropdown from "./react/LanguageDropdown.tsx";
---

<header class="sticky top-0 z-50 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50 lg:border-b lg:border-slate-900/10 dark:border-slate-50/[0.06] bg-white/95 supports-backdrop-blur:bg-white/60 dark:bg-transparent">
  <div class="max-w-7xl mx-auto">
    <div class="py-4 border-b border-slate-900/10 lg:px-8 lg:border-0 dark:border-slate-300/10 mx-4 lg:mx-0">
      <div class="relative flex items-center">
        <!-- Logo -->
        <a class="mr-3 flex-none w-[2.0625rem] overflow-hidden md:w-auto" href="/">
          <span class="font-bold text-xl">Jake Kinchen</span>
        </a>
        
        <nav class="text-sm leading-6 font-semibold text-slate-700 dark:text-slate-200 ml-auto">
          <ul class="flex space-x-8">
            <li><a class="hover:text-sky-500 dark:hover:text-sky-400" href="/about">About</a></li>
            <li><a class="hover:text-sky-500 dark:hover:text-sky-400" href="/projects">Projects</a></li>
            <li><a class="hover:text-sky-500 dark:hover:text-sky-400" href="/lab">Lab</a></li>
            <li><a class="hover:text-sky-500 dark:hover:text-sky-400" href="/blog">Blog</a></li>
            <li><a class="hover:text-sky-500 dark:hover:text-sky-400" href="/contact">Contact</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
